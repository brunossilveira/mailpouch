<%= turbo_frame_tag 'newsletter_database' do %>
  <div class"">
    <ul class="hidden mb-5 md:flex flex-wrap justify-center">
      <% @categories.each do |category| %>
        <li>
          <%= link_to category, newsletter_database_path(category: category), class: 'shadow shadow-[5px_5px] shadow-orange-600 m-1 block rounded-lg bg-blue-350/70 text-gray-600 text-sm p-2 hover:text-white hover:bg-blue-450 font-semibold' %>
        </li>
      <% end %>
    </ul>

    <ul class="hidden md:max-h-96 md:overflow-scroll md:grid md:grid-cols-4 md:gap-2 md:pt-4 md:border-t-2">
      <% @newsletters.each do |newsletter| %>
        <%= link_to newsletter['ext_url'], target:'_blank', class: 'shadow m-1 block rounded-lg bg-gray-300 text-sm px-4 py-2 hover:bg-orange-200 text-gray-600' do %>
          <li>
            <div class="flex justify-between">
              <p class="font-semibold">
                <%= newsletter['title'] %>
              </p>

              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
              </svg>
            </div>
            <p class="italic mt-1">Sent <%= newsletter['details']%></p>
            <p class="mt-3">
              <%= newsletter['short_description'].html_safe %>
            </p>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
<% end %>
