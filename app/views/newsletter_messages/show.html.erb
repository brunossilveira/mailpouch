<%= turbo_frame_tag "newsletter_message" do %>
  <div class="absolute top-0 z-50 w-fit md:left-1/2 md:-translate-x-1/2 md:h-full" tabindex="-1" data-controller="modal" data-action="turbo:before-render@document->modal#hideBeforeRender keyup@window->modal#handleKeyUp">
    <div class="relative w-full h-full p-4">
      <!-- Modal content -->
      <div class="relative bg-white h-max rounded-lg border border-gray-400">
        <!-- Modal header -->
        <div class="flex items-start justify-between p-4 border-b rounded-t border-gray-400">
          <img class="w-6 h-6" src="<%= unavatar_url @newsletter_message.newsletter.email.split('@').last %>"></img>
          <h3 class="text-xl font-semibold text-gray-900"><%= @newsletter_message.subject %></h3>
          <button data-action="click->modal#close" type="button" class="text-gray-500 bg-transparent hover:text-orange-600 text-sm p-1.5 inline-flex items-center">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
          </button>
        </div>
        <!-- Modal body -->
        <div class="w-full max-h-[48rem] overflow-y-scroll">
          <%= @newsletter_message.body&.html_safe %>
        </div>
        <!-- Modal footer -->
        <div class="flex items-center p-6 space-x-2 border-t border-gray-400 rounded-b justify-end">
          <button data-action="click->modal#close" type="button" class="px-5 py-2 font-bold rounded border-2 border-black mx-2 hover:text-orange-600 hover:border-orange-600 focus:z-10 float-right">
            Close
          </button>
        </div>
      </div>
    </div>
  </div>
<% end %>
