<%= content_for :title, 'Blog' %>
<%= content_for :description, "Here you find the best content about newsletters" %>

<div class="bg-white">
  <div class="pt-12 sm:pt-16 lg:pt-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl lg:text-5xl">Blog</h1>
      </div>
    </div>l
  </div>
  <div class="mt-8 pb-16 sm:mt-12 sm:pb-20 lg:pb-28">
    <div class="relative">
      <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <ul class="space-y-2">
          <% @posts.each do |post| %>
            <li>
              <%= link_to post.title, post_path(post), class: "text-xl underline" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
