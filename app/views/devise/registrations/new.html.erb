<%= content_for :title, 'Sign Up' %>
<%= content_for :description, "Sign Up to Unclutter your Inbox" %>

<div class="flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <h2 class="mt-6 text-center text-3xl font-extrabold">
      <%= t(:sign_up)%>
    </h2>

    <%= render partial: 'shared/omniauth/google' %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
      <div class="max-w-md w-full space-y-8">
        <% if resource.errors.any? %>
          <div class="text-sm text-red-600" data-turbo-cache="false">
            <ul>
              <% resource.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <input type="hidden" name="remember" value="true">
        <div class="rounded-md shadow-sm -space-y-px">
          <div>
            <%= f.label :email, t(:email), class: 'sr-only' %>
            <%= f.email_field :email, placeholder: t(:email), autofocus: true, required: true, autocomplete: "email", class: 'appearance-none rounded-none relative block w-full px-3 py-2 border-2 placeholder-gray-400 text-gray-600 rounded-t-md focus:outline-none focus:ring-orange-600 focus:border-orange-600 focus:z-10 sm:text-sm' %>
          </div>
          <div>
            <% placeholder = t('devise.shared.minimum_password_length', count: @minimum_password_length) if @minimum_password_length %>
            <%= f.label :password, t(:password), class: 'sr-only' %>
            <%= f.password_field :password, placeholder: "#{t(:password)} (#{placeholder})", required: true, autocomplete: "new-password", class: 'appearance-none rounded-none relative block w-full px-3 py-2 border-2 placeholder-gray-400 text-gray-600 focus:outline-none focus:ring-orange-600 focus:border-orange-600 focus:z-10 sm:text-sm' %>
          </div>
          <div>
            <%= f.label :password_confirmation, t(:password_confirmation), class: 'sr-only' %>
            <%= f.password_field :password_confirmation, placeholder: t(:password_confirmation), required: true, autocomplete: "new-password", class: 'appearance-none rounded-none relative block w-full px-3 py-2 border-2 placeholder-gray-400 text-gray-600 rounded-b-md focus:outline-none focus:ring-orange-600 focus:border-orange-600 focus:z-10 sm:text-sm' %>
          </div>
        </div>

        <div class="flex items-center justify-end">
          <div class="text-sm">
            <%= render "devise/shared/links" %>
          </div>
        </div>

        <div>
          <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-orange-600 hover:bg-orange-600/90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-600">
            <span class="absolute left-0 inset-y-0 flex items-center pl-3">
              <!-- heroicon name: lock-closed -->
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
              </svg>
            </span>

            <%= t(:sign_up) %>
          </button>
        </div>
      </div>
  </div>
<% end %>
</div>
