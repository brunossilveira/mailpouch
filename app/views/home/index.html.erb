<!-- Hero -->
<div class="relative overflow-hidden pb-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="lg:text-center">
      <main class="mt-10 mx-auto max-w-7xl px-4 sm:mt-12 sm:px-6 md:mt-16 lg:mt-20 lg:px-8 xl:mt-28">
        <h1 class="text-4xl tracking-tight font-extrabold text--gray-600 sm:text-5xl md:text-6xl">
          <span class="block xl:inline">Enjoy the newsletters you love</span>
          <span class="block text-amber-600 xl:inline">in your own time</span>
        </h1>
        <p class="mt-3 text-2xl text-gray-500 mt-8">
          Never get interrupted by a newsletter again. <span class="font-bold text-amber-600">You choose when you receive them.</span>
        </p>
        <div class="mt-5 sm:mt-8 sm:flex justify-center">
          <div class="rounded-md shadow">
            <%= link_to t(:sign_up), new_user_registration_path, class: 'w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-gray-200 bg-amber-600 hover:text-gray-200 hover:bg-amber-900 md:py-4 md:text-lg md:px-10' %>
          </div>
