<nav data-controller="nav" class="border-b">
  <div class="max-w-7xl mx-auto p-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <div class="flex items-center space-x-2">
        <%= image_tag("logo.png", class: "h-10", alt: 'logo') %>
        <%= link_to "Mailpouch", root_path, class: "flex-shrink-0 font-bold text-4xl" %>

        <%= render partial: 'shared/links' %>
      </div>
      <%= render partial: 'shared/profile' %>

      <div class="flex md:hidden">
        <button data-action="click->nav#toggleMobile" class="bg-orange-600 inline-flex items-center justify-center p-2 rounded-md text-gray-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-800 focus:ring-white">
          <span class="sr-only">Open main menu</span>
          <svg data-nav-target="button" class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg data-nav-target="button" class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <div data-nav-target="mobile" class="hidden md:hidden">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
      <% if user_signed_in? %>
        <%= link_to t(:inbox), inbox_index_path, class: "text-gray-600 block px-3 py-2 rounded-md text-base font-medium" %>
        <%= link_to t(:newsletters), newsletter_subscriptions_path, class: "text-gray-600 block px-3 py-2 rounded-md text-base font-medium" %>
      <% else %>
        <%= link_to 'The Best Email Newsletters', newsletter_database_path, class: 'text-gray-600 block px-3 py-2 rounded-md text-base font-medium' %>
        <%= link_to 'Blog', blog_path, class: 'text-gray-600 block px-3 py-2 rounded-md text-base font-medium' %>
        <%= link_to t(:pricing), pricing_path, class: "text-gray-600 block px-3 py-2 rounded-md text-base font-medium" %>
      <% end %>
    </div>

    <div class="pt-4 pb-3 border-t border-gray-700">
      <% if user_signed_in? %>
        <div class="flex items-center px-5">
          <div class="flex-shrink-0">
            <%= user_profile_image(current_user, klass: 'h-10 w-10 rounded-full') %>
          </div>
          <div class="ml-3">
            <div class="text-gray-600 text-sm font-medium leading-none"><%= current_user.email %></div>
          </div>
        </div>
        <div class="mt-3 px-2 space-y-1">
          <%= link_to t(:profile), profile_path, role: 'menuitem', class: 'text-gray-600 block px-3 py-2 rounded-md text-base font-medium' %>
          <%= link_to t(:manage_subscriptions), current_user.payment_processor.billing_portal.url, role: 'menuitem', class: 'text-gray-600 block px-3 py-2 rounded-md text-base font-medium', target: "_blank" if current_user && current_user.subscribed? && !current_user.on_trial? %>
          <%= link_to t(:sign_out), destroy_user_session_path, data: { "turbo-method": :delete }, role: 'menuitem' ,class: 'text-gray-600 block px-3 py-2 rounded-md text-base font-medium' %>
        </div>
      <% else %>
        <div class="px-2 space-y-1">
          <%= link_to t(:sign_up), new_user_registration_path, role: 'menuitem', class: 'text-gray-600 block px-3 py-2 rounded-md text-base font-medium' %>
        </div>
      <% end %>
    </div>
  </div>
</nav>
