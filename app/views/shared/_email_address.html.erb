<div class="max-w-7xl mx-auto py-4 px-4 sm:px-6 lg:px-8 text-sm text-center">
  <div data-controller="clipboard" class="sm:flex items-center justify-center bg-amber-200 rounded-md p-4 space-x-1">
    <span class="text-gray-700 sm:text-md">Subscribe to newsletters using this address:</span>
    <span data-clipboard-target="source" data-action="click->clipboard#copy" class="flex font-bold text-amber-900 cursor-pointer items-center space-x-1">
      <span><%= user_mailpouch_email_address %></span>
      <svg
        data-clipboard-target="copy"
        data-transition-enter="transition ease-in-out duration-500"
        data-transition-enter-start="transform opacity-0 scale-95"
        data-transition-enter-end="transform opacity-100 scale-100"
        data-transition-leave="transition ease-in-out duration-500"
        data-transition-leave-start="transform opacity-100 scale-100"
        data-transition-leave-end="transform opacity-0 scale-95"
        xmlns="http://www.w3.org/2000/svg"
        class="w-5 h-5"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3" />
      </svg>

      <svg
        data-clipboard-target="copied"
        data-transition-enter="transition ease-in-out duration-500"
        data-transition-enter-start="transform opacity-0 scale-95"
        data-transition-enter-end="transform opacity-100 scale-100"
        data-transition-leave="transition ease-in-out duration-500"
        data-transition-leave-start="transform opacity-100 scale-100"
        data-transition-leave-end="transform opacity-0 scale-95"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-5 h-5 text-green-600 hidden">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
    </span>
  </div>
</div>
