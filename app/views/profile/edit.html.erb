<div class="flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8" data-controller="profile">
  <div class="max-w-md w-full space-y-8">
    <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-600">
      <%= t(:profile)%>
    </h2>

    <%= form_for(current_user, url: edit_profile_path, data: { turbo: false }) do |f| %>
      <div>
        <%= f.label :username, t(:username), class: 'sr-only' %>
        <%= f.text_field :username, placeholder: t(:username), autocomplete: 'off', value: current_user.username, class: "appearance-none rounded-md relative block w-full px-3 py-2 border-2 placeholder-gray-400 text-gray-600 focus:outline-none focus:ring-orange-600 focus:z-10 sm:text-sm shadow #{current_user.errors[:username].present? ? 'border-red-600 focus:border-red-700' : 'border-orange-600 focus:border-orange-600'}", disabled: current_user.reload.username.present?, data: { "profile-target" => "username", action: "input->profile#showHint" } %>

        <% if current_user.errors[:username].present? %>
          <p class="flex items-center pt-2 text-red-600 text-sm">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>

            <%= current_user.errors[:username].join(', ').humanize %>
          </p>
        <% end %>
        <p data-profile-target="hint" class="pt-2 text-gray-500 text-sm">Your newsletters address: <%= current_user.mailbox_email_address %></p>
        <p data-profile-target="domain" class="hidden"><%= current_user.mailbox_email_address.split('@').last %></p>
      </div>

      <% unless current_user.reload.username.present? %>
        <div class="mt-5">
          <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-amber-50 bg-amber-600 hover:bg-amber-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-600">
            <%= t(:save) %>
          </button>
        </div>
    <% end %>
    <% end %>
  </div>
</div>
