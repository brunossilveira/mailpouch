#!/usr/bin/env bash

gcloud builds submit \
  --tag us-central1-docker.pkg.dev/mailpouch-364912/mailpouch/mailpouch-gke .

kubectl create -f .kube/migrations.yml
kubectl wait --for=condition=complete --timeout=600s job/migrate
kubectl delete job migrations
kubectl delete pods -l app=mailpouch
kubectl delete pods -l app=sidekiq
